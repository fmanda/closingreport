<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".facade.BaseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtCaption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="From Detail Order"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="#No Order"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/sample_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Tanggal"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/sample_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="ODP"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:id="@+id/txtODP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:singleLine="false"
                    android:text="@string/sample_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="QRCode"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:id="@+id/txtQRCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:singleLine="false"
                    android:text="@string/sample_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Status"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <RadioGroup
                    android:id="@+id/rgStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkedButton="@+id/rbClosed"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbClosed"
                        style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:checked="false"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/closed"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbPending"
                        style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:checked="false"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/pending"
                        android:textSize="12sp" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="2"
                    android:padding="5dp"
                    android:text="Keterangan"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/txtDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@android:color/holo_blue_dark"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="2"
                    android:padding="5dp"
                    android:text="@string/divider"
                    android:textColor="@android:color/white"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:id="@+id/txtKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:singleLine="false"
                    android:text="@string/sample_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtCaption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Detail Bahan"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">


            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/tambah_material"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lnhButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnUpdate"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/update"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnPending"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorProcess"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCancel"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>